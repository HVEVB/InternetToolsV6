<UserControl x:Class="InternetToolsV6.Views.PingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InternetToolsV6.Views"
             xmlns:viewmodel="clr-namespace:InternetToolsV6.ViewModels"
             xmlns:views="clr-namespace:InternetToolsV6.Views"
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d"
             d:DesignHeight="576" d:DesignWidth="1080">
    <UserControl.DataContext>
        <viewmodel:PingViewModel/>
    </UserControl.DataContext>
    <Grid>
        <GroupBox Header="Configurations" HorizontalAlignment="Left" Width="200">
            <Grid>
                <StackPanel>
                    <Label Content="Address"/>
                    <TextBox Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"/>
                    <Button Command="{Binding SendPing}" Height="32" Content="Ping" Margin="0 5 0 5"/>
                    <Label Content="Timeout"/>
                    <Slider Value="{Binding Timeout, UpdateSourceTrigger=PropertyChanged}" Height="20" Margin="0 0 0 5"/>
                    <GroupBox Header="Ping Protocols" Margin="0 0 0 5">
                        <StackPanel>
                            <RadioButton IsChecked="{Binding ICMPChecked, UpdateSourceTrigger=PropertyChanged}" Content="ICMP Ping" Height="24"  Margin="0 0 0 5"/>
                            <RadioButton IsChecked="{Binding TCPPChecked, UpdateSourceTrigger=PropertyChanged}" Content="TCP Ping"  Height="24"  Margin="0 0 0 5"/>
                            <RadioButton IsChecked="{Binding UDPChecked, UpdateSourceTrigger=PropertyChanged}" Content="UDP Ping"  Height="24"  Margin="0 0 0 0"/>
                            <RadioButton IsChecked="{Binding ARPChecked, UpdateSourceTrigger=PropertyChanged}" Content="ARP Ping"  Height="24"  Margin="0 0 0 5"/>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Header="Protocol Ports">
                        <StackPanel>
                            <Label Content="TCP Port" Height="24"  Margin="0 0 0 5"/>
                            <Controls:NumericUpDown Value="{Binding TCPPort, UpdateSourceTrigger=PropertyChanged}"/>
                            <Label Content="UDP Port" Height="24"  Margin="0 0 0 5"/>
                            <Controls:NumericUpDown Value="{Binding UDPPort, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </Grid>
        </GroupBox>
        <GroupBox Header="Information" Margin="204,0,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <GroupBox Header="Ping Status Information">
                    <Grid>
                        <DataGrid 
                            ItemsSource="{Binding IpStatusList, UpdateSourceTrigger=PropertyChanged}" 
                            Margin="0,0,0,37"
                            CanUserAddRows="False"
                            CanUserDeleteRows="True"
                            AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Success"     Binding="{Binding SuccessOrUnsuccess, UpdateSourceTrigger=PropertyChanged}"/>
                                <DataGridTextColumn Header="Source"      Binding="{Binding SourceAddress, UpdateSourceTrigger=PropertyChanged}"/>
                                <DataGridTextColumn Header="Data"        Binding="{Binding Data, UpdateSourceTrigger=PropertyChanged}"/>
                                <DataGridTextColumn Header="Protocol"    Binding="{Binding Protocol, UpdateSourceTrigger=PropertyChanged}"/>
                                <DataGridTextColumn Header="Destination" Binding="{Binding Destination, UpdateSourceTrigger=PropertyChanged}"/>
                                <DataGridTextColumn Header="Time"        Binding="{Binding Time, UpdateSourceTrigger=PropertyChanged}"/>
                                <DataGridTextColumn Header="IPV4"        Binding="{Binding FoundIPV4, UpdateSourceTrigger=PropertyChanged}"/>
                                <DataGridTextColumn Header="IPV6"        Binding="{Binding FoundIPV6, UpdateSourceTrigger=PropertyChanged}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Button Command="{Binding ClearIPStatusList}" VerticalAlignment="Bottom" Height="32" Content="Clear List"/>
                    </Grid>
                </GroupBox>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
